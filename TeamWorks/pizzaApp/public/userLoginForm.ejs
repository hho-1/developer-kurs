<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/assets/css/style.css" />
    <title>Pizza App</title>
    <style>
        input {
            width: 100%;
        }

        table th,
        table td {
            vertical-align: top;
            padding: 5px;
        }

        span.helptext {
            font-size: 50%;
            opacity: 0.75;
        }

        img {
            max-width: 500px;
            height: auto;
        }
    </style>
</head>

<body>
    <!-- navbar start -->
    <nav class="navbar navbar-expand-lg navbar navbar-white">
        <div class="container-fluid ">
            <a class="navbar-brand alert-warning" href="/">
                <img src="/assets/images/nadia.jpeg" width="80" height="80">
                <span>Nadia's Garden Pizza</span>
            </a>
            <div class="collapse navbar-collapse" id="navbars-host">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/users/create">Register</a></li>
                    <li class="nav-item"><a class="nav-link" href="/auth/login"><b>Login</b></a></li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- navbar end -->
    <!-- content start -->
    <div class="pb-5">
        <div class="mx-auto d-flex justify-content-center align-items-center pt-5">
            <div class="card w-50">
                <div class="card-body">
                    <h2>User Login</h2>
                    <hr>
                    <form action="" method="POST">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <td>Username</td>
                                    <td><input type="text" name="username" required class="form-control" value="test">
                                    </td>
                                </tr>
                                <tr>
                                    <td>Password</td>
                                    <td><input type="password" name="password" required class="form-control"
                                            value="12345678"></td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td><label><input class="form-check-input" type="checkbox" name="rememberMe"
                                                value="1"> Remember Me</label></td>
                                </tr>
                            </tbody>
                        </table>
                        <br>
                        <input class="btn btn-primary" type="submit" value="OK">
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- content end -->
    <!-- footer start -->
    <footer class="bg-dark text-white p-1 position-fixed bottom-0 w-100">
        <div class="text-center">Clarusway FullStack Team</div>
    </footer>
    <!-- footer end -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>